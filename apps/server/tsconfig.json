{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "ES2021",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "incremental": true,
    "skipLibCheck": true,
    "strict": false, // Enable all strict type-checking options
    "paths": {
      "@secom/dow-jones": ["libs/dow-jones/src"],
      "@secom/dow-jones/*": ["libs/dow-jones/src/*"],
      "@secom/dow-jones/libs/*": ["libs/dow-jones/lib/*"],
      "@secom/dow-jones/libs/dow-jones/*": ["libs/dow-jones/lib/dow-jones/*"]
    }
  },
  "include": [
    "libs/**/*",
    "src/**/*",
    "src/**/*.ts",
    "src/multer.d.ts",
    "config/dowJonesConfig.ts"
  ],
  "exclude": ["node_modules", "dist"]
}
